{% extends 'base.html.twig' %}

{% block body %}
    <div class="container">

        <h1 class="text-center">Sow 7 : Tableau des scores</h1>
        <img src="https://media.giphy.com/media/26gsv9r7Ecsxz438k/giphy.gif" alt="socks" width="100%">
        <div class="row">
            {% for user in users %}

            <div class="col-md-4">
                <div class="thumbnail">
                    <img src="{{ asset('uploads/'~user.picture) }}" alt="{{ user.name }} {{ user.firstName }} socks" width="100%">
                    <div class="caption">
                        <h3>{{ user.name }} {{ user.firstName }}</h3>
                        <h4>Score: {{ user.score }}</h4>
                    </div>
                </div>

            </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}

{% block stylesheets %}

{% endblock %}
